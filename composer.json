{
    "name": "dive-be/php-crowbar",
    "description": "Access private methods / properties",
    "type": "library",
    "homepage": "https://github.com/dive-be/php-crowbar",
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammed Sari",
            "email": "muhammed@dive.be",
            "homepage": "https://dive.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.2"
    },
    "autoload": {
        "psr-4": {
            "Dive\\Crowbar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --config .php-cs-fixer.dist.php --allow-risky=yes",
        "test": "vendor/bin/pest",
        "verify": "@composer test"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "pestphp/pest": "^2.6",
        "friendsofphp/php-cs-fixer": "^3.16"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
